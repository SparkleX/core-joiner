{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"properties": {
        "$schema": {
            "type": "string"
		},		
        "name": {
			"type": "string",
			"minLength": 1,
  			"maxLength": 20
        },
        "description": {
            "type": "string"
		},
		"foundation": {
			"type": "string"
		},
		"columns":{
			"$ref": "#/definitions/columns"
		}		
	},
	"additionalProperties": false,
    "definitions": {
        "columns":{
			"type": "array",
			"minItems": 1,
			"items": {
				"$ref": "#/definitions/column"
			}
		},
		"column":{
			"type": "object",
			"required": ["tableAlias", "column"],
			"properties": {
				"tableAlias": {"type": "string"},
				"column": {
					"type": "string"					
				},
				"aggression": {
					"type": "string",
					"enum": ["sum", "max", "min", "avg"]
				}
			},
			"additionalProperties": false
		}					
    }	
}